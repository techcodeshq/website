{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components"],
      "@images": ["src/images/*"],
      "@pages": ["src/pages"],
      "@styles": ["src/styles"],
      "@views": ["src/views"],
      "@hooks": ["src/hooks"]
    }
  },
  "include": ["./src/**/*"]
}
